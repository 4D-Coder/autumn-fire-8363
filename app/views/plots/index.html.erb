<body>
  <section id="flight_list">
    <h3>Plot Details:</h3>
    <ul>
      <p><% @plots.each do |plot| %>
        <div id="plot_details-<%= plot.id %>">
          <div id="plot_plants">
            <p>Plants for Plot #<%= plot.number%>:</p>
              <% plot.plants.each do |plant| %>
                <div id="plot-<%= plot.id %>_plant-<%= plant.id%>">
                  <li><%= plant.name %></li>
                  <%= button_to "Delete", plant_path(plant.id), method: :delete, params: {plot_id: plot.id}, local: true %></li>
                </div>
              <% end %>
          </div>
        </div>
      <% end %></p>
    </ul>
  <section>
</body>